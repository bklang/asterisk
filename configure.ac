     ;;
     solaris*)
     OSARCH=SunOS
     ;;
     mingw32)
     OSARCH=mingw32
     WINARCH=1
     ;;
     cygwin)
     OSARCH=cygwin
     WINARCH=1
     ;;
     *)
     OSARCH=${host_os}
     ;;
esac

